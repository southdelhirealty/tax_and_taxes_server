# Docker Environment Variables
# Copy this file to .env and configure with your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# Email Configuration (REQUIRED)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
ADMIN_EMAIL=admin@yourdomain.com

# Cashfree Configuration (REQUIRED)
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret-key
CASHFREE_ENVIRONMENT=PROD

# Cashfree URLs (Optional - defaults provided)
CASHFREE_BASE_URL=https://api.cashfree.com/pg
CASHFREE_JS_URL=https://sdk.cashfree.com/js/v3/cashfree.js

# Application URLs
PRODUCTION_FRONTEND_URL=https://taxandtaxes.com
PRODUCTION_BACKEND_URL=http://localhost:3001

# Security Configuration
CORS_ORIGIN=https://taxandtaxes.com,https://www.taxandtaxes.com
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/jpg,image/png

# Development URLs (for docker-compose.dev.yml)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001 